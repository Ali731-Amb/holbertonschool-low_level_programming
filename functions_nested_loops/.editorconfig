root = true
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[.c]
indent_style = tab
tab_width = 4
indent_size = 4
continuation_indent_size = 4

[.h]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab

[.md]
trim_trailing_whitespace = false
